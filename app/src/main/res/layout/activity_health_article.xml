<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order1"
    tools:context=".HealthArticleActivity">

    <TextView
        android:id="@+id/textviewHATitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Care"
        android:textColor="@color/saffron"
        android:textSize="48sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/textviewHATitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEALTH ARTICLE"
        android:textColor="@color/colourWhite"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/cabin_medium_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewHATitle"
        app:layout_constraintVertical_bias="0.034" />

    <ListView
        android:id="@+id/listViewHA"
        android:layout_width="338dp"
        android:layout_height="472dp"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textviewHATitle"
        app:layout_constraintVertical_bias="0.601" />



</androidx.constraintlayout.widget.ConstraintLayout>